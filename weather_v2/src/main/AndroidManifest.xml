<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="my.com.codeplay.training.weatherapp_v2">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="LockedOrientationActivity">

        <activity
            android:name=".ui.weather.WeatherActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.citylist.CityListActivity"
            android:exported="false"
            android:label="@string/select_a_city"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.history.HistoryActivity"
            android:exported="false"
            android:label="@string/history"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.weather.WeatherActivity" />

        <activity
            android:name=".ui.forecast.ForecastActivity"
            android:exported="false"
            android:label="@string/weather_forecast"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.weather.WeatherActivity" />

    </application>

</manifest>